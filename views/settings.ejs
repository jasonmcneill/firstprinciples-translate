<!DOCTYPE html>
<html>

<head>
  <title>Settings</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" type="text/css" href="/css/bootstrap-4.3.1-dist/css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="/css/fontawesome-free-5.11.2-web/css/all.min.css">
  <link rel="stylesheet" href="/css/style.css" />
</head>

<body>

  <%- include('./navmenu'); %>

  <div class="container-fluid fp-master">
    <div class="row">

      <div class="col fp-main bg-light text-dark">
        <form id="form-settings" novalidate>

          <div class="row">
            <div class="col-sm-3">

              <h3 class="mt-0 mb-3">Settings</h3>

              <div class="form-group mb-4" id="name_group">
                <label for="Name">Your name:</label>
                <input type="text" class="form-control" id="name" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please input your name.</div>
              </div>

              <div class="form-group mb-4" id="email_group">
                <label for="email">Your e-mail:</label>
                <input type="email" class="form-control" id="email">
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please input your e-mail address.</div>
              </div>

              <div class="form-group mb-4" id="lang_group">
                <label for="lang">Translating from English into...</label>
                <select class="form-control" id="lang"></select>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please select the language that you're translating into.</div>
              </div>

              <div class="form-group mb-4 d-none" id="bibleversion_lang_group">
                <label for="bibleversion">Bible version:</label>
                <select class="form-control" id="bibleversion"></select>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please select the Bible version.</div>
              </div>

              <div class="row">
                <div class="col-sm-2">
                  <button type="submit" class="btn btn-primary">
                    Save
                  </button>
                </div>
                <div class="col-sm-10">
                  <div class="toast" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="toast-header">
                      <strong class="mr-auto"></strong>
                      <small class="text-muted"></small>
                      <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="toast-body"></div>
                  </div>
                </div>
              </div>

            </div>
          </div>
      </div>

      </form>
    </div>
  </div>


  <script type="text/javascript" src="/js/jquery-3.3.1.slim.min.js"></script>
  <script type="text/javascript" src="/js/popper.min.js"></script>
  <script type="text/javascript" src="/css/bootstrap-4.3.1-dist/js/bootstrap.js"></script>
  <script type="text/javascript" src="/js/pages/settings.js"></script>

</body>

</html>