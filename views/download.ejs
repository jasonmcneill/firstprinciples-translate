<!DOCTYPE html>
<html>

<head>
  <title>Download</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" type="text/css" href="/css/bootstrap-4.3.1-dist/css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="/css/fontawesome-free-5.11.2-web/css/all.min.css">
  <link rel="stylesheet" href="/css/style.css" />
</head>

<body>

  <div class="container-fluid fp-master">
    <div class="row">

      <div class="col-sm-1 fp-side-nav d-none d-sm-block">
        <%- include('./navmenu'); %>
      </div>

      <div class="col-sm-11 fp-main py-2 bg-light text-dark">
        <form id="form-settings" novalidate>

          <div class="container ml-3">
            <div class="row">
              <div class="col-sm-12">

                <h1 class="mt-0 mb-3">Download</h1>

                <!-- Progress -->
                <div class="row">
                  <div class="col-md-5">

                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th>Page</th>
                          <th>Progress</th>
                          <th>%</th>
                        </tr>
                      </thead>
                      <tbody>

                        <!-- Settings -->
                        <tr>
                          <td><label for="progress_settings">Settings:</label></td>
                          <td><progress id="progress_dial_settings" max="100" value="0"></progress></td>
                          <td><span id="progress_text_settings">0%</span></td>
                        </tr>

                        <!-- Scriptures -->
                        <tr>
                          <td><label for="progress_scriptures">Scriptures:</label></td>
                          <td><progress id="progress_dial_scriptures" max="100" value="0"></progress></td>
                          <td><span id="progress_text_scriptures">0%</span></td>
                        </tr>

                        <!-- Pages -->
                        <tr>
                          <td><label for="progress_pages">Pages:</label></td>
                          <td><progress id="progress_dial_pages" max="100" value="0">0%</progress></td>
                          <td><span class="progress_text_pages">0%</span></td>
                        </tr>

                        <!-- Globals -->
                        <tr>
                          <td><label for="progress_dial_globals">Global Content:</label></td>
                          <td><progress id="progress_dial_globals" max="100" value="0"></progress></td>
                          <td><span id="progress_text_globals">0%</span></td>
                        </tr>

                        <!-- Overall -->
                        <tr>
                          <td><strong><label for="progress_dial_overall">Overall:</label></strong></td>
                          <td><progress id="progress_dial_overall" max="100" value="0"></progress></td>
                          <td><strong><span id="progress_text_overall">0%</span></strong></td>
                        </tr>

                      </tbody>
                    </table>

                  </div>
                </div>

              </div>
            </div>
          </div>

        </form>
      </div>
    </div>
  </div>


  <script type="text/javascript" src="/js/jquery-3.3.1.slim.min.js"></script>
  <script type="text/javascript" src="/js/popper.min.js"></script>
  <script type="text/javascript" src="/css/bootstrap-4.3.1-dist/js/bootstrap.js"></script>
  <script type="text/javascript" src="/js/pages/settings.js"></script>

</body>

</html>